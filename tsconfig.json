{
  "compilerOptions": {
      "outDir": "./dist/",
      "module": "commonjs",
      "jsx": "react-jsx",
      "baseUrl": ".",
      "importHelpers": true,
      "strict": true,
      "isolatedModules": true,
      "declaration": true,
      "sourceMap": true,
      "noImplicitAny": true,
      "target": "es5",
      "lib": [ "es2015", "dom" ],
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "moduleResolution": "node",
      "allowJs": true,
      "paths": {
          "@/*": ["./src/*"]
      }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "./config/", "./.storybook"]
}
