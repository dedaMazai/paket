{
    "compilerOptions": {
        "outDir": "./dist/",
        "module": "commonjs",
        "jsx": "react-jsx",
        "baseUrl": ".",
        "importHelpers": true,
        "strict": true,
        "isolatedModules": true,
        "declaration": true,
        "sourceMap": true,
        "noImplicitAny": true,
        "target": "es5",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "node",
        "allowJs": true,
        "paths": {
            "@/*": ["./src/*"]
        }
    },
    "ts-node": {
        "compilerOptions": {
            "module": "CommonJS"
        }
    },
    "include": [
        "./src/**/*.ts",
        "./src/**/*.tsx",
    ],
}
